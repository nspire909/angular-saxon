{
  "root": true,
  "ignorePatterns": ["**/*"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["import", "@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": [
          "libs/components/tsconfig.lib.json",
          "libs/common/tsconfig.lib.json",
          "apps/wessex/tsconfig.app.json"
        ]
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "plugin:@typescript-eslint/stylistic-type-checked",
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates",
        "./libs/eslint/recommended.js",
        "./libs/eslint/recommended-formatting.js",
        "prettier"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "ngsx",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "ngsx",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "no-console": ["error", {}],
        "no-restricted-imports": ["error", "rxjs/operators"],
        "no-multiple-empty-lines": [
          "error",
          {
            "max": 1,
            "maxEOF": 0,
            "maxBOF": 0
          }
        ],
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": [
              "**/test-setup.ts",
              "**/*.spec.ts",
              "**/*.stories.ts",
              "**/.storybook/**/*",
              "**/proxy.conf.js",
              "**/jest.*.{js,ts}",
              "**/playwright.config.ts"
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:rxjs/recommended", "./libs/eslint/recommended-strict-safe-any.js"],
      "rules": {
        "@typescript-eslint/prefer-nullish-coalescing": "off",
        "rxjs/no-compat": "error",
        "rxjs/no-connectable": "error",
        "rxjs/no-cyclic-action": "error",
        "rxjs/no-ignored-observable": "error",
        "rxjs/no-ignored-subscribe": "error",
        "rxjs/no-subclass": "error",
        "rxjs/no-topromise": "error",
        "rxjs/no-unsafe-catch": "error",
        "rxjs/no-unsafe-first": "error",
        "rxjs/no-unsafe-switchmap": "error",
        "rxjs/prefer-observer": "error",
        "rxjs/throw-error": "error"
      }
    },
    {
      "files": ["*.json"],
      "extends": ["plugin:jsonc/recommended-with-jsonc", "plugin:json-schema-validator/recommended"],
      "rules": {
        "jsonc/comma-dangle": ["error", "never"]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@nx/angular-template"],
      "rules": {}
    }
  ]
}
